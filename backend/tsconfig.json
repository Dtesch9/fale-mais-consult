{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"]
    },                                        
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,   
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
